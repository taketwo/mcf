#!/usr/bin/env bash

KEYBOARD_LAYOUTS="us(dvorak),ru"

function show_help
{
  echo "-h : show help"
  echo "-g : get current layout"
  echo "-s : set layout"
  echo "-l : list layouts"
  echo "-n : set next layout in the list"
}

function get_layout
{
  setxkbmap -print | grep xkb_symbols | awk '{print $4}' | awk -F"+" '{print $2}'
}

function set_layout
{
  setxkbmap -layout "$1"
}

function list_layouts
{
  echo $KEYBOARD_LAYOUTS
}

function set_next_layout
{
  layout=$(get_layout)
  IFS=',' read -ra LAYOUTS <<< "$KEYBOARD_LAYOUTS"
  for i in "${!LAYOUTS[@]}"; do
    if [[ ${LAYOUTS[$i]} == "$layout" ]]; then
      j=$(((i + 1) % ${#LAYOUTS[@]}))
      set_layout "${LAYOUTS[$j]}"
      exit
    fi
  done
  set_layout "${LAYOUTS[0]}"
}

while getopts "hgs:ln" opt; do
  case "$opt" in
    g)  get_layout
        exit 0
        ;;
    s)  set_layout "$OPTARG"
        exit $?
        ;;
    l)  list_layouts
        exit 0
        ;;
    n)  set_next_layout
        exit $?
        ;;
    h)  show_help
        exit 0
        ;;
    *)  show_help
        exit 0
        ;;
  esac
done
