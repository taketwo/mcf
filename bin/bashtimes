#!/usr/bin/env bash

# Print Bash startup timings

pid=$(ps -o ppid= -p $$)
[[ -f "/tmp/bashtimes.$pid" ]] || return 1
awk '
{
   if (NR==1) {
      first=$2
   }
   last=$3
   ms = ($3 - $2) / 1000000
   printf( "%6.2f ms %s\n", ms, $1)
}
END {
   printf("Total: %6.2f ms\n",  (last-first) / 1000000 )
}
' "/tmp/bashtimes.$pid" |

sort -k1 -n -r
