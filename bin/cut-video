#!/bin/sh

usage ()
{
  echo "Usage: $1 infile outfile start duration [-a]"
  echo ""
  echo "Cut out a part of a video, without re-coding."
  echo "Start and duration should be given in the hh:mm:ss format."
  echo "To discard audio stream, pass -a option."
}

IFILE="$1"
OFILE="$2"
START="$3"
DURATION="$4"
AUDIO="$5"

if [ -z "$IFILE" ]; then
  usage "$0"
  exit 1
fi

if [ "$AUDIO" = "-a" ]; then
  audio="-an"
else
  audio="-acodec copy"
fi

ffmpeg            \
  -ss "$START"    \
  -i "$IFILE"     \
  -t "$DURATION"  \
  -vcodec copy    \
  $audio          \
  "$OFILE"
