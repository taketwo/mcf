{
  "argparse": {
    "prefix": "argparse",
    "body": [
      "parser = argparse.ArgumentParser(description='''",
      "${1}",
      "''', formatter_class=argparse.RawDescriptionHelpFormatter)",
      "$0",
      "args = parser.parse_args()"
    ],
    "description": "Argparse"
  },
  "arg": {
    "prefix": "arg",
    "body": [
      "parser.add_argument(\"${1:--name}\", ${2:type=${3:int\\}, }${4:default=${5:0\\}, }help=\"${6:help}\")$0"
    ],
    "description": "Add argument"
  },
  "argb": {
    "prefix": "argb",
    "body": [
      "parser.add_argument(\"${1:--name}\", action=\"store_true\", help=\"${2:help}\")$0"
    ],
    "description": "Add argument (boolean flag)"
  },
  "argf": {
    "prefix": "argf",
    "body": [
      "parser.add_argument(\"${1:name}\", type=argparse.FileType(\"${2:r}\"), help=\"${3:help}\")$0"
    ],
    "description": "Add argument (file)"
  }
}
