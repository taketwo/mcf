#!/usr/bin/env python3
# encoding: utf-8

from subprocess import call

from install import only


@only("ubuntu")
def setup():
    print("Disabling MPD system service...")
    call(["sudo", "service", "mpd", "stop"])
    call(["sudo", "update-rc.d", "mpd", "disable"])


if __name__ == "__main__":
    setup()
