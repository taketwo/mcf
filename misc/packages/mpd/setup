#!/usr/bin/env python3
# encoding: utf-8

from subprocess import call

from install import only


@only("ubuntu")
def setup():
    print("Disabling MPD system service...")
    call(["sudo", "systemctl", "stop", "mpd.service"])
    call(["sudo", "systemctl", "disable", "mpd.service"])


if __name__ == "__main__":
    setup()
