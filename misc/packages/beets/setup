#!/usr/bin/env python3
# encoding: utf-8

import argparse
from os.path import join, split, expanduser, realpath

from filesystem import link


def setup():
    print('Creating symlinks...')
    home = expanduser('~')
    # Beets config directory
    path, fl = split(realpath(__file__))
    src = join(path, 'src', 'beets')
    tgt = join(home, '.config', 'beets')
    link(src, tgt, 'Beets config directory')


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='''
    Setup Beets (symlink config folder).
    ''', formatter_class=argparse.RawDescriptionHelpFormatter)
    args = parser.parse_args()
    setup()
