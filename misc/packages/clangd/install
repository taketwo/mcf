#!/usr/bin/env bash

VERSION=11

if [[ -n $VERSION ]]; then
  clangd="clangd-$VERSION"
else
  # Find out most up-to-date version
  clangd=$(apt-cache search clangd- | cut -d' ' -f1 | sort -V | tail -1)
fi

echo "Installing clangd version: $clangd"

sudo apt-get install -y "$clangd"
sudo update-alternatives --install /usr/bin/clangd clangd "/usr/bin/$clangd" 100
