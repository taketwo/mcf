[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  frag = magenta
  old = red bold
[alias]
  st = status -sb
  cm = commit -m
  ca = !git add -A && git commit
  co = checkout
  lg = log --all --graph --oneline --decorate --abbrev-commit
  rim = rebase -i master
  in = "!git remote update -p; git log ..@{u}"
  out = log @{u}..
  remotes = remote -v
  branches = branch -v
  tags = tag -l
  bd = branch -D
  start = "!git init && git commit --allow-empty -m 'Initial commit'"
  reword = commit --amend
  amend = commit --amend --no-edit
[core]
  editor = nvim
[push]
  default = tracking
[pager]
  diff = diff-so-fancy | less --tabs=1,5 -RFX
  show = diff-so-fancy | less --tabs=1,5 -RFX
[user]
  signingkey = B70F82225D2CBAF4
[gpg]
  program = gpg2
[commit]
  gpgsign = true
[gui]
  fontui = -family \"Fantasque Sans Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"Fantasque Sans Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[merge]
  tool = diffconflicts
[mergetool]
  keepBackup = false
[mergetool "diffconflicts"]
  cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true
