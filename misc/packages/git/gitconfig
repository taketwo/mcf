[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  frag = magenta
  old = red bold
[alias]
  st = status -sb
  cm = commit -m
  ca = !git add -A && git commit
  co = checkout
  lg = log --all --graph --oneline --decorate --abbrev-commit
  rim = rebase -i master
  rimo = rebase -i origin/master
  in = "!git remote update -p; git log ..@{u}"
  out = log @{u}..
  remotes = remote -v
  branches = branch -v
  tags = tag -l
  bd = branch -D
  start = "!git init && git commit --allow-empty -m 'Initial commit'"
  reword = commit --amend
  amend = commit --amend --no-edit
  sync = "!git pull && git submodule sync && git submodule update --init --recursive && git remote prune origin"
[core]
  editor = nvim
  pager = delta --theme='Solarized (light)'
[push]
  default = tracking
[user]
  signingkey = B70F82225D2CBAF4
[gpg]
  program = gpg2
[commit]
  gpgsign = true
[gui]
  fontui = -family \"Victor Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
  fontdiff = -family \"Victor Mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
[merge]
  tool = diffconflicts
[mergetool]
  keepBackup = false
[mergetool "diffconflicts"]
  cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true
[credential]
	helper = store
